<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
  >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:padding="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/txtRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="8.3"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtAddressItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#A4A4A4"
                />
        </LinearLayout>


    </LinearLayout>

    <VideoView
        android:id="@+id/videoV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_img_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/lnOrder"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/colorFoody">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_delivery_man"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_Order"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ava12" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/txtNameReview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngô Phi Vân"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>
                <TextView
                    android:id="@+id/txtDiem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.4"
                    android:textColor="@color/color_green"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtReview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Món ngon, giá cả hợp lý!! Nhân vien rất nhiệt tình"
                android:textColor="#585858"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ava0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/txtNameReview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyen Ha"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>
                <TextView
                    android:id="@+id/txtDiem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.2"
                    android:textColor="@color/color_green"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtReview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Gà nướng bánh gạo phô mai rất ngon^^"
                android:textColor="#585858"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:padding="5dp"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/btnCountC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="3"
            android:drawablePadding="-40dp"
            android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
            android:drawableTint="@color/tab_border"
            />
        <Button
            android:id="@+id/btnCountP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="3333"
            android:drawablePadding="-30dp"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:drawableTint="@color/tab_border"
            />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="0dp"/>
        <TextView
            android:id="@+id/txtState"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang mở cửa"
            android:gravity="center"
            android:drawableRight="@drawable/icon_open"
            />
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>