<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray1"
    android:orientation="vertical"
    tools:context="com.example.lttha.a14110180_lethithao_foody.Activity.CategoryType">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_category_type"
        android:background="@color/colorFoody"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/custom.toolbar"
        app:popupTheme="@style/Theme.AppCompat.NoActionBar">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/AppTabLayout"
                android:textColor="@color/white"
                android:layout_gravity="left|center_vertical" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Khám phá" />
        <GridView
            android:id="@+id/gridDicovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="auto_fit"
            android:gravity="center"
            android:columnWidth="80dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:stretchMode="columnWidth" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Giao hàng &amp; Đặt chỗ" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/delivery"
                        android:padding="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đặt giao hàng"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/tablenow"
                        android:padding="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Đặt chỗ ưu đãi"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>



</LinearLayout>
